{
    "name": "react-howler-player",
    "version": "1.0.11",
    "main": "build/index.js",
    "module": "build/index.es.js",
    "description": "React package to display minimalist audio player UI adding wrapper on howler.js",
    "scripts": {
        "test": "jest --verbose ./test",
        "lint:js": "eslint src/*.js",
        "prebuild": "npm-run-all lint:js clean",
        "build": "cross-env NODE_ENV=production rollup -c",
        "start": "rollup -c -w",
        "clean": "rimraf build dist",
        "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
        "build:website": "cd website && npm run build"
    },
    "files": [
        "build",
        "LICENCE",
        "package.json",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:binodswain/react-howler-player.git"
    },
    "jest": {
        "moduleNameMapper": {
            "\\.(css|less|sass|scss)$": "identity-obj-proxy",
            "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
        }
    },
    "peerDependencies": {
        "howler": "^2.1.3",
        "prop-types": "^15.5.4",
        "react": "^15.0.0 || ^16.0.0",
        "react-dom": "^15.0.0 || ^16.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.5.5",
        "@babel/core": "^7.4.5",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-react": "^7.0.0",
        "babel-eslint": "^10.1.0",
        "cross-env": "^7.0.2",
        "eslint": "^6.8.0",
        "eslint-plugin-react": "^7.19.0",
        "howler": "^2.1.3",
        "husky": "^4.2.5",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^24.9.0",
        "lint-staged": "^10.1.3",
        "node-sass": "^4.14.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.4",
        "prettier-eslint-cli": "^5.0.0",
        "prop-types": "^15.5.4",
        "react": "^16.0.0",
        "react-dom": "^16.0.0",
        "react-test-renderer": "^16.12.0",
        "rimraf": "^3.0.0",
        "rollup": "^1.27.14",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-peer-deps-external": "^2.2.0",
        "rollup-plugin-postcss": "^2.0.3",
        "rollup-plugin-terser": "^5.1.3",
        "stylelint-prettier": "^1.1.2"
    },
    "engines": {
        "node": ">=8",
        "npm": ">=5"
    },
    "keywords": [
        "react",
        "audio",
        "player",
        "web",
        "media",
        "howlerjs"
    ],
    "author": "â€œBinod Swain<binodkumarswain94@gmail.com> (binodswain.github.io)",
    "license": "MIT",
    "lint-staged": {
        "*.scss": [
            "prettier --write"
        ],
        "*.{js,jsx,mjs,md,json,yml}": [
            "prettier-eslint --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
